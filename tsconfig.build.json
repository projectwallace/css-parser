{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"declaration": true,
		"emitDeclarationOnly": true,
		"noEmit": false,
		"outDir": "./dist",
		"rootDir": "./src",
		"stripInternal": true
	},
	"include": ["src/**/*.ts"],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.test.ts",
		"benchmark",
		"src/parse-utils.ts",
		"src/string-utils.ts",
		"src/char-types.ts"
	]
}
